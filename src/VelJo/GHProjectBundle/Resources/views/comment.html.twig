{% extends 'VelJoGHProjectBundle::index.html.twig' %}

{% block container %}
    {% if resultData.error is defined %}
        <b>{{ resultData.error  }}</b>
    {% elseif resultData.id %}
        {{ include ('VelJoGHProjectBundle:Modules:breadcrumbs.html.twig', {'sectionName': 'Gbook', 'pageName': 'Single Comment'}) }}
        <div class="well">
            <div class="single_comment">
                <div class="">
                    <div class="user_picture">
                        <img class="img-circle" src="" />
                    </div>
                    <div class="user_name">
                        <h4><b>{{ resultData.name }}</b></h4>
                        {{ resultData.email }}
                    </div>
                    <div class="clr"></div>
                </div><br>
                <div>{{ resultData.message }}</div>
            </div>
            <div class="clr"></div>
            <hr class="light"/>
        </div>
    {% endif %}
{% endblock container %}