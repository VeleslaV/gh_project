{% extends 'VelJoGHProjectBundle::index.html.twig' %}

{% block searchForm %}
    {{ render(controller('VelJoGHProjectBundle:Main:searchForm')) }}
{% endblock searchForm %}

{% block container %}
    {% if pageData.error is defined %}
        <b>{{ pageData.error }}</b>
    {% else %}
        {{ include ('VelJoGHProjectBundle:Modules:breadcrumbs.html.twig', {'pageName': pageData.sectionTitle}) }}
        <div class="">
        </div>
        <div class="article_wrapper">
            <h1 class="page-header">Latest Articles</h1>
            <p class="lead">
                {{ include ('VelJoGHProjectBundle:Modules:articles_template.html.twig', {'posts': pageData.articles}) }}
                <div id="moreArticlesContainer"><div id="loaderContainer"></div></div>
                <a href="javascript:;" id="showMoreArticles" class="btn btn-block btn-primary">Show more articles</a>
            </p>
        </div>
    {% endif %}
{% endblock container %}